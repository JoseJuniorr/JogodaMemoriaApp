<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Activity_game">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="326dp"
        android:layout_height="481dp"
        android:layout_margin="1dp"
        android:layout_marginStart="10dp"


        android:layout_marginLeft="10dp"


        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@+id/btnReiniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJogador">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <ImageButton
                android:id="@+id/btn0"
                android:layout_width="65dp"
                android:layout_height="120dp"


                />

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="65dp"
                android:layout_height="120dp" />

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn9"
                android:layout_width="65dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn10"
                android:layout_width="65dp"
                android:layout_height="120dp" />

            <ImageButton
                android:id="@+id/btn11"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn12"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn13"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn14"
                android:layout_width="65dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn15"
                android:layout_width="65dp"
                android:layout_height="120dp" />

            <ImageButton
                android:id="@+id/btn16"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn17"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn18"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn19"
                android:layout_width="65dp"
                android:layout_height="match_parent" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="42dp"
        android:text="@string/Jogador"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="@string/CPU"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJogador"
        app:layout_constraintVertical_bias="0.357" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:layout_marginBottom="32dp"
        android:background="#FFC107"
        android:text="@string/btnReinciarJogo"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>




















